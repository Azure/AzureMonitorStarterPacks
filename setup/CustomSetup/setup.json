{
    "$schema": "https://schema.management.azure.com/schemas/2021-09-09/uiFormDefinition.schema.json",
    "view": {
        "kind": "Form",
        "properties": {
            "title": "Install Azure Monitor Starter Packs",
            "steps": [
                {
                    "name": "basics",
                    "label": "Basics",
                    "elements": [
                        {
                            "name": "resourceScope",
                            "type": "Microsoft.Common.ResourceScope",
                            "kind": "ManagementGroup",
                            "instanceDetailsLabel": "MonStar Packs Deployment Details"
                        },
                        {
                            "name": "mgmtGroupAPI",
                            "type": "Microsoft.Solutions.ArmApiControl",
                            "request": {
                                "method": "GET",
                                "path": "providers/Microsoft.Management/managementGroups?api-version=2020-05-01"
                            }
                        }
                    ]
                },
                {
                    "name": "Configuration",
                    "label": "MonStar Configuration",
                    "elements": [
                        {
                            "name": "subscriptionAPI",
                            "type": "Microsoft.Solutions.ArmApiControl",
                            "request": {
                                "method": "GET",
                                "path": "subscriptions?api-version=2022-12-01"
                            }
                        },
                        {
                            "name": "ResGroupsApi",
                            "type": "Microsoft.Solutions.ArmApiControl",
                            "request": {
                                "method": "GET",
                                "path": "[concat(steps('Configuration').subscriptionId,'/resourceGroups?api-version=2021-04-01')]"
                            }
                        },
                        {
                            "name": "LogAnalyticsApi",
                            "type": "Microsoft.Solutions.ArmApiControl",
                            "request": {
                                "method": "GET",
                                "path": "[concat(steps('Configuration').subscriptionId, '/providers/microsoft.operationalinsights/workspaces?api-version=2021-06-01')]"
                            }
                        },
                        {
                            "name": "ActionGroupsApi",
                            "type": "Microsoft.Solutions.ArmApiControl",
                            "request": {
                                "method": "GET",
                                "path": "[concat(steps('Configuration').subscriptionId, '/providers/Microsoft.Insights/actionGroups?api-version=2021-09-01')]"
                            }
                        },
                        {
                            "name": "dataCollectionEndpointAPI",
                            "type": "Microsoft.Solutions.ArmApiControl",
                            "request": {
                                "method": "GET",
                                "path": "[concat(steps('Configuration').subscriptionId, '/providers/Microsoft.Insights/dataCollectionEndpoints?api-version=2022-06-01')]"
                            }
                        },
                        {
                            "name": "userManagedIdentitiesAPI",
                            "type": "Microsoft.Solutions.ArmApiControl",
                            "request": {
                                "method": "GET",
                                "path": "[concat(steps('Configuration').subscriptionId, '/providers/Microsoft.ManagedIdentity/userAssignedIdentities?api-version=2023-01-31')]"
                            }
                        },                      
                        {
                            "name": "subscriptionId",
                            "type": "Microsoft.Common.DropDown",
                            "label": "Select Subscription",
                            "multiselect": false,
                            "defaultValue": "",
                            "toolTip": "Subscription to deploy resources to.",
                            "filter": true,
                            "filterPlaceholder": "Filter Subscriptions...",
                            "defaultDescription": "A value for selection",
                            "constraints": {
                                "allowedValues": "[map(steps('Configuration').subscriptionAPI.value, (item) => parse(concat('{\"label\":\"', item.displayName, '\",\"value\":\"', item.id, '\"}')))]",
                                "required": true
                            },
                            "visible": true
                        },
                        {
                            "name": "ResourceGroupStatus",
                            "type": "Microsoft.Common.OptionsGroup",
                            "label": "Use New or Existing Resource Group",
                            "toolTip": "This will be the Resource Group in which the MonStar Packs` resources will be deployed in.",
                            "constraints": {
                                "allowedValues": [
                                    {
                                        "label": "New",
                                        "value": "New"
                                    },
                                    {
                                        "label": "Existing",
                                        "value": "Existing"
                                    }
                                ],
                                "required": true
                            },
                            "visible": true
                        },
                        {
                            "name": "resourceGroupNameNew",
                            "type": "Microsoft.Common.TextBox",
                            "label": "Resource Group Name for MonStar Packs",
                            "subLabel": "",
                            "defaultValue": "rg-MonstarPacks",
                            "toolTip": "MonStar Packs Resource Group where resources will be deployed.",
                            "constraints": {
                                "required": "[equals(steps('Configuration').ResourceGroupStatus, 'New')]",
                                "regex": "",
                                "validationMessage": ""
                            },
                            "visible": "[equals(steps('Configuration').ResourceGroupStatus, 'New')]"
                        },
                        {
                            "name": "resourceGroupNameExisting",
                            "type": "Microsoft.Common.DropDown",
                            "label": "Existing Resource Group",
                            "multiselect": false,
                            "defaultValue": "",
                            "toolTip": "MonStar Packs Resource Group where resources will be deployed.",
                            "filter": true,
                            "filterPlaceholder": "Filter Resource Groups...",
                            "defaultDescription": "A value for selection",
                            "constraints": {
                                "allowedValues": "[map(steps('Configuration').ResGroupsApi.value, (item) => parse(concat('{\"label\":\"', item.name, '\",\"value\":\"', item.id, '\"}')))]",
                                "required": true
                            },
                            "visible": "[equals(steps('Configuration').ResourceGroupStatus, 'Existing')]"
                        },
                        {
                            "name": "dataCollectionEndpointId",
                            "type": "Microsoft.Common.DropDown",
                            "label": "Select data collection endpoint.",
                            "multiselect": false,
                            "defaultValue": "",
                            "toolTip": "Storage Account to support solution",
                            "filter": true,
                            "filterPlaceholder": "Filter Storage Account...",
                            "defaultDescription": "A value for selection",
                            "constraints": {
                                "allowedValues": "[map(steps('Configuration').dataCollectionEndpointAPI.value, (item) => parse(concat('{\"label\":\"', item.name, '\",\"value\":\"', item.id, '\"}')))]",
                                "required": true
                            },
                            "visible": true
                        },
                        {
                            "name": "userManagedIdentitiesId",
                            "type": "Microsoft.Common.DropDown",
                            "label": "Select user managed identity for Packs.",
                            "multiselect": false,
                            "defaultValue": "packsUserManagedIdentity",
                            "toolTip": "Select User Managed identity for the pack.",
                            "filter": true,
                            "filterPlaceholder": "Filter Storage Account...",
                            "defaultDescription": "A value for selection",
                            "constraints": {
                                "allowedValues": "[map(steps('Configuration').userManagedIdentitiesAPI.value, (item) => parse(concat('{\"label\":\"', item.name, '\",\"value\":\"', item.id, '\"}')))]",
                                "required": true
                            },
                            "visible": true
                        },
                        {
                            "name": "LogAnalyticsWorkspaceResource",
                            "type": "Microsoft.Solutions.ResourceSelector",
                            "label": "Log Analytics Workspace",
                            "toolTip": "Log Analytics Workspace from/in which data will be read and stored.",
                            "resourceType": "Microsoft.OperationalInsights/workspaces",
                            "constraints": {
                                "required": true
                            },
                            "infoMessages": [],
                            "visible": true
                        },
                        {
                            "name": "assignmentLevel",
                            "type": "Microsoft.Common.OptionsGroup",
                            "label": "Assign Policies to ManagementGroup or Subscription",
                            "toolTip": "This will define the initial assignment Level for the policies.",
                            "defaultValue": "Subscription",
                            "constraints": {
                                "allowedValues": [
                                    {
                                        "label": "Management Group",
                                        "value": "ManagementGroup"
                                    },
                                    {
                                        "label": "Subscription",
                                        "value": "Subscription"
                                    }
                                ],
                                "required": true
                            },
                            "visible": true
                        }                     
                    ]
                },
                {
                    "name": "Packs",
                    "label": "Packs",
                    "elements": [
                        {
                            "name": "ActionGroupsApi",
                            "type": "Microsoft.Solutions.ArmApiControl",
                            "request": {
                                "method": "GET",
                                "path": "[concat(steps('Configuration').subscriptionId, '/providers/Microsoft.Insights/actionGroups?api-version=2021-09-01')]"
                            }
                        },
                        {
                            "name": "deployAllPacks",
                            "type": "Microsoft.Common.CheckBox",
                            "label": "Deploy All Packs",
                            "toolTip": "Select to deploy all packs.",
                            "defaultValue": true,
                            "constraints": {
                                "required": false,
                                "validationMessage": "Select to deploy the available packs to the selected environment."
                            }
                        },
                        {
                            "name": "deployIaaSPacks",
                            "type": "Microsoft.Common.CheckBox",
                            "label": "Deploy All IaaS Packs",
                            "toolTip": "Select to deploy all packs.",
                            "defaultValue": true,
                            "constraints": {
                                "required": false,
                                "validationMessage": "Select to deploy the available IaaS packs to the selected environment."
                            },
                            "visible": "[equals(steps('Packs').deployAllPacks, false)]"
                        },
                        {
                            "name": "deployPaaSPacks",
                            "type": "Microsoft.Common.CheckBox",
                            "label": "Deploy All PaaS Packs",
                            "toolTip": "Select to deploy all PaaS packs like Storage, OpenAI, etc.",
                            "defaultValue": true,
                            "constraints": {
                                "required": false,
                                "validationMessage": "Select to deploy the available PaaS packs to the selected environment."
                            },
                            "visible": "[equals(steps('Packs').deployAllPacks, false)]"
                        },
                        {
                            "name": "deployPlatformPacks",
                            "type": "Microsoft.Common.CheckBox",
                            "label": "Deploy All Platform Packs",
                            "toolTip": "Select to deploy all platform packs, like KeyVault, Network, etc.",
                            "defaultValue": true,
                            "constraints": {
                                "required": false,
                                "validationMessage": "Select to deploy the available platform packs to the selected environment."
                            },
                            "visible": "[equals(steps('Packs').deployAllPacks, false)]"
                        },
                        {
                            "name":"packsText",
                            "type": "Microsoft.Common.TextBlock",
							"options": {
								"text": "When selected, all packs available will be deployed.",
								"link": {
									"label": "Learn more",
									"uri": "https://github.com/Azure/AzureMonitorStarterPacks/tree/main/Packs#readme"
								}
							},
                            "visible": "[equals(steps('Packs').deployPacks, true)]"
                        },
                        {
                            "name": "ActionGroupStatus",
                            "type": "Microsoft.Common.OptionsGroup",
                            "label": "Use New or Existing Action Group",
                            "toolTip": "This will be the Action Group to receive alert emails.",
                            "constraints": {
                                "allowedValues": [
                                    {
                                        "label": "New",
                                        "value": "New"
                                    },
                                    {
                                        "label": "Existing",
                                        "value": "Existing"
                                    }
                                ],
                                "required": true
                            },
                            "visible": "[or(equals(steps('Packs').deployIaaSPacks, true),equals(steps('Packs').deployAllPacks, true),equals(steps('Packs').deployPaaSPacks, true),equals(steps('Packs').deployPlatformPacks, true))]"
                        },
                        {
                            "name": "existingAG",
                            "type": "Microsoft.Common.DropDown",
                            "label": "Existing Action Group",
                            "multiselect": false,
                            "defaultValue": "",
                            "toolTip": "Action Group to receive alerts.",
                            "filter": true,
                            "filterPlaceholder": "Filter Resource Groups...",
                            "defaultDescription": "A value for selection",
                            "constraints": {
                                "allowedValues": "[map(steps('Packs').ActionGroupsApi.value, (item) => parse(concat('{\"label\":\"', item.name, '\",\"value\":\"', item.id, '\"}')))]",
                                "required": true
                            },
                            "visible": "[and(or(equals(steps('Packs').deployIaaSPacks, true),equals(steps('Packs').deployAllPacks, true),equals(steps('Packs').deployPaaSPacks, true),equals(steps('Packs').deployPlatformPacks, true)),equals(steps('Packs').ActionGroupStatus, 'Existing'))]"
                        },
                        {
                            "name": "NewActionGroupName",
                            "type": "Microsoft.Common.TextBox",
                            "label": "New Action Group Name",
                            "subLabel": "",
                            "defaultValue": "",
                            "toolTip": "",
                            "constraints": {
                                "required": true
                            },
                            "visible": "[and(or(equals(steps('Packs').deployIaaSPacks, true),equals(steps('Packs').deployAllPacks, true),equals(steps('Packs').deployPaaSPacks, true),equals(steps('Packs').deployPlatformPacks, true)),equals(steps('Packs').ActionGroupStatus, 'New'))]"
                        },
                        {
                            "name": "emailreceivers",
                            "type": "Microsoft.Common.TextBox",
                            "label": "Email Receiver(s)",
                            "subLabel": "",
                            "defaultValue": "",
                            "toolTip": "",
                            "constraints": {
                                "required": true
                            },
                            "visible": "[and(or(equals(steps('Packs').deployIaaSPacks, true),equals(steps('Packs').deployAllPacks, true),equals(steps('Packs').deployPaaSPacks, true),equals(steps('Packs').deployPlatformPacks, true)),equals(steps('Packs').ActionGroupStatus, 'New'))]"
                        },
                        {
                            "name": "emailreceiversemails",
                            "type": "Microsoft.Common.TextBox",
                            "label": "Email Receiver(s) email(s)",
                            "subLabel": "",
                            "defaultValue": "",
                            "toolTip": "",
                            "constraints": {
                                "required": true
                            },
                            "visible": "[and(or(equals(steps('Packs').deployIaaSPacks, true),equals(steps('Packs').deployAllPacks, true),equals(steps('Packs').deployPaaSPacks, true),equals(steps('Packs').deployPlatformPacks, true)),equals(steps('Packs').ActionGroupStatus, 'New'))]"
                        }
                    ]
                }
            ]
        },
        "outputs": {
            "parameters": {
                "mgname": "[steps('basics').resourceScope.managementGroup.name]",
                "subscriptionId": "[last(split(steps('Configuration').subscriptionId,'/'))]",
                "resourceGroupId": "[if(equals(steps('Configuration').ResourceGroupStatus, 'New'), steps('Configuration').resourceGroupNameNew, steps('Configuration').resourceGroupNameExisting)]",
                "location": "[steps('basics').resourceScope.location.name]",
                "assignmentLevel": "[steps('Configuration').assignmentLevel]",
                "workspaceId": "[steps('Configuration').LogAnalyticsWorkspaceResource.id]",
                "solutionTag":"MonitorStarterPacks",
                "solutionVersion":"1.0.0",
                "dceId":"[steps('Configuration').dataCollectionEndpointId]",
                "userManagedIdentityResourceId":"[steps('Configuration').userManagedIdentitiesId]",
                "actionGroupName":"[if(equals(steps('Packs').ActionGroupStatus, 'New'), steps('Packs').NewActionGroupName, last(split(steps('Packs').existingAG,'/')))]",
                "emailreceivers":"[if(equals(steps('Packs').ActionGroupStatus, 'New'), steps('Packs').emailreceivers,'')]",
                "emailreiceversemails":"[if(equals(steps('Packs').ActionGroupStatus, 'New'), steps('Packs').emailreceiversemails,'')]",
                "existingAGRG":"[if(equals(steps('Packs').ActionGroupStatus, 'New'), steps('Packs').NewActionGroupName, last(take(split(steps('Packs').existingAG,'/'),5)))]",
                "useExistingAG":"[if(equals(steps('Packs').ActionGroupStatus, 'New'), 'false', 'true')]",
                "grafanaName": "[concat('AMSP',first(split(last(split(steps('Configuration').subscriptionId,'/')),'-')))]",
                "deployAllIaaSPacks": "[steps('Packs').deployIaaSPacks]",
                "deployAllPaaSPacks": "[steps('Packs').deployPaaSPacks]",
                "deployAllPlatformPacks": "[steps('Packs').deployPlatformPacks]",
                "deployAllPacks": "[steps('Packs').deployAllPacks]"
            },
            "kind": "ManagementGroup",
            "location": "[steps('basics').resourceScope.location.name]",
            "managementGroupId": "[steps('basics').resourceScope.managementGroup.id]"
        }
    }
}